% neurips_2025.sty - NeurIPS 2025 style file
\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{neurips_2025}[2025/01/01 NeurIPS 2025]

\newif\if@final\@finalfalse
\newif\if@preprint\@preprintfalse
\DeclareOption{final}{\@finaltrue}
\DeclareOption{preprint}{\@preprinttrue}
\ProcessOptions\relax

\RequirePackage[verbose=true,letterpaper]{geometry}
\AtBeginDocument{
  \newgeometry{textheight=9in,textwidth=5.5in,top=1in,headheight=12pt,headsep=25pt,footskip=30pt}
}

\renewcommand{\rmdefault}{ptm}
\renewcommand{\sfdefault}{phv}

\setlength{\parindent}{0pt}
\setlength{\parskip}{6pt}

\def\@maketitle{%
  \vskip 0.5in
  \begin{center}%
    {\LARGE\bfseries \@title \par}%
    \vskip 0.3in
    \if@final
      {\large\begin{tabular}[t]{c}\@author\end{tabular}\par}%
    \else
      {\large Anonymous Author(s)\par}%
    \fi
    \vskip 0.3in
  \end{center}
}

\renewenvironment{abstract}{\centerline{\large\bfseries Abstract}\vspace{0.5ex}\begin{quote}}{\end{quote}\vskip 1ex}

\RequirePackage{natbib}
\bibliographystyle{abbrvnat}

\if@final\else
  \RequirePackage{fancyhdr}
  \pagestyle{fancy}
  \fancyhf{}
  \fancyhead[C]{Submitted to NeurIPS 2025}
  \fancyfoot[C]{\thepage}
  \renewcommand{\headrulewidth}{0pt}
\fi

\endinput
